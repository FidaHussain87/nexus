{
  "name": "shurium-wallet",
  "version": "0.1.0",
  "description": "SHURIUM Mobile Wallet - Secure cryptocurrency wallet for SHR",
  "main": "index.js",
  "scripts": {
    "android": "react-native run-android",
    "android:release": "cd android && ./gradlew assembleRelease",
    "android:debug": "cd android && ./gradlew assembleDebug",
    "android:clean": "cd android && ./gradlew clean",
    "android:bundle": "react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "start:reset": "react-native start --reset-cache",
    "test": "jest",
    "lint": "eslint .",
    "clean": "rm -rf node_modules && rm -rf ios/Pods && rm -rf android/build && rm -rf android/app/build",
    "clean:android": "cd android && ./gradlew clean && rm -rf app/build",
    "install:clean": "rm -rf node_modules && npm install"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.1.0",
    "@react-native-community/blur": "^4.4.1",
    "@react-navigation/bottom-tabs": "^6.6.1",
    "@react-navigation/native": "^6.1.18",
    "@react-navigation/native-stack": "^6.11.0",
    "bip32": "^4.0.0",
    "bip39": "^3.1.0",
    "buffer": "^6.0.3",
    "lottie-react-native": "^7.1.0",
    "react": "18.3.1",
    "react-native": "0.76.6",
    "react-native-gesture-handler": "^2.21.2",
    "react-native-haptic-feedback": "^2.3.3",
    "react-native-keychain": "^9.2.2",
    "react-native-linear-gradient": "^2.8.3",
    "react-native-qrcode-svg": "^6.3.14",
    "react-native-quick-crypto": "^0.7.8",
    "react-native-safe-area-context": "^4.14.1",
    "react-native-screens": "^3.34.0",
    "react-native-svg": "^15.8.0",
    "secp256k1": "^5.0.1",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/runtime": "^7.26.0",
    "@eslint/js": "^9.18.0",
    "@react-native-community/cli": "^15.1.3",
    "@react-native-community/cli-platform-android": "^15.1.3",
    "@react-native-community/cli-platform-ios": "^15.1.3",
    "@react-native/babel-preset": "0.76.6",
    "@react-native/metro-config": "0.76.6",
    "@react-native/typescript-config": "0.76.6",
    "@types/react": "^18.3.18",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.18.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3"
  },
  "overrides": {
    "glob": "^11.0.0",
    "rimraf": "^6.0.1"
  },
  "engines": {
    "node": ">=18"
  },
  "private": true
}
